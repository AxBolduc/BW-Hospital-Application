<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      style="-fx-background-color: #0067E1; -fx-background-radius: 7; -fx-border-color: black; -fx-border-width: 2; -fx-border-radius: 7;"
      xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="edu.wpi.cs3733.D21.teamB.views.map.misc.TxtDirPopupController">
    <children>
        <ScrollPane hbarPolicy="NEVER" prefHeight="350.0" style="-fx-background-color: #0067E1;"
                    stylesheets="@../../../css/treeView.css">
            <content>
                <VBox fx:id="textHolder" alignment="TOP_CENTER" prefHeight="348.0" prefWidth="700.0" spacing="7.0"
                      style="-fx-background-color: #0067E1;">
                    <padding>
                        <Insets left="20.0" right="20.0" top="25.0"/>
                    </padding>
                </VBox>
            </content>
            <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </ScrollPane>
       <HBox alignment="CENTER" spacing="55.0" VBox.vgrow="ALWAYS">
          <children>
              <JFXButton fx:id="btnRestart" alignment="CENTER" buttonType="RAISED" maxWidth="-Infinity"
                         minWidth="-Infinity" onAction="#handleButtonAction" prefWidth="90.0"
                         style="-fx-background-color: e5e5e5; -fx-background-radius: 7;" text="Restart">
                  <HBox.margin>
                      <Insets/>
                  </HBox.margin>
                  <padding>
                      <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
                  </padding>
                  <font>
                      <Font name="System Bold" size="12.0"/>
                  </font>
              </JFXButton>
              <JFXButton fx:id="btnPrevious" alignment="CENTER" buttonType="RAISED" maxWidth="-Infinity"
                         minWidth="-Infinity" onAction="#handleButtonAction" prefWidth="90.0"
                         style="-fx-background-color: e5e5e5; -fx-background-radius: 7;" text="Previous">
                  <padding>
                      <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
                  </padding>
                  <font>
                      <Font name="System Bold" size="12.0"/>
                  </font>
              </JFXButton>
              <JFXButton fx:id="btnNext" alignment="CENTER" buttonType="RAISED" maxWidth="-Infinity"
                         minWidth="-Infinity" onAction="#handleButtonAction" prefWidth="90.0"
                         style="-fx-background-color: e5e5e5; -fx-background-radius: 7;" text="Next">
                  <padding>
                      <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
                  </padding>
                  <font>
                      <Font name="System Bold" size="12.0"/>
                  </font>
              </JFXButton>
              <JFXButton fx:id="btnClose" alignment="CENTER" buttonType="RAISED" cancelButton="true"
                         maxWidth="-Infinity" minWidth="-Infinity" onAction="#handleButtonAction" prefWidth="90.0"
                         style="-fx-background-color: #CE2029; -fx-background-radius: 7;" text="Close" textFill="WHITE">
                  <HBox.margin>
                      <Insets/>
                  </HBox.margin>
                  <padding>
                      <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
                  </padding>
              </JFXButton>
          </children>
          <VBox.margin>
              <Insets bottom="10.0"/>
          </VBox.margin>
       </HBox>
    </children>
</VBox>
