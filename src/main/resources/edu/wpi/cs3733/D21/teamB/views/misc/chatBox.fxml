<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="base" maxHeight="31.0" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="31.0" prefWidth="350.0"
      style="-fx-border-color: black; -fx-border-width: 1; -fx-background-color: ffffff"
      xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="edu.wpi.cs3733.D21.teamB.views.misc.ChatBoxController">
    <children>
        <HBox fx:id="topBar" alignment="CENTER_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
              minWidth="-Infinity" prefHeight="31.0" prefWidth="348.0" style="-fx-background-color: d5d5d5;">
            <children>
                <Label text="How may we assist you?">
                    <HBox.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                    </HBox.margin>
                </Label>
                <JFXButton fx:id="btnMinimize" buttonType="RAISED" maxHeight="-Infinity" maxWidth="-Infinity"
                           minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="25.0"
                           style="-fx-background-color: #32CD32; -fx-background-radius: 4;" text="-">
                    <HBox.margin>
                        <Insets bottom="3.0" left="150.0" right="3.0" top="3.0"/>
                    </HBox.margin>
                </JFXButton>
                <JFXButton fx:id="btnClose" buttonType="RAISED" maxHeight="-Infinity" maxWidth="-Infinity"
                           minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="25.0"
                           style="-fx-background-color: #FF0000; -fx-background-radius: 4;" text="X">
                    <HBox.margin>
                        <Insets bottom="3.0" right="3.0" top="3.0"/>
                    </HBox.margin>
                </JFXButton>
            </children>
        </HBox>
        <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" maxWidth="-Infinity" minWidth="-Infinity" maxHeight="0.0"
                    prefHeight="9999.0"
                    prefWidth="336.0" style="-fx-background-color: transparent;">
            <content>
                <VBox fx:id="messageHolder" maxWidth="-Infinity" minHeight="320.0" minWidth="-Infinity"
                      prefWidth="318.0" spacing="5.0"/>
            </content>
            <VBox.margin>
                <Insets bottom="7.0" left="7.0" right="2.0" top="7.0"/>
            </VBox.margin>
            <stylesheets>
                <URL value="@../../css/treeView.css"/>
                <URL value="@../../css/scrollPane.css"/>
            </stylesheets>
        </ScrollPane>
        <VBox fx:id="textFieldHolder" maxHeight="0.0">
            <children>
                <JFXTextField fx:id="input" focusColor="#405aa800" onKeyReleased="#handleSendMessage"
                              promptText="Type a message..."
                              style="-fx-background-color: e5e5e5; -fx-background-radius: 7;" unFocusColor="#4d4d4d00">
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </JFXTextField>
            </children>
            <padding>
                <Insets left="10.0" right="10.0"/>
            </padding>
        </VBox>
    </children>
</VBox>
