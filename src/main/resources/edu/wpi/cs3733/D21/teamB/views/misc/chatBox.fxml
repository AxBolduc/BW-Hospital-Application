<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="base" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="350.0" style="-fx-background-color: ffffff;"
      xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="edu.wpi.cs3733.D21.teamB.views.misc.ChatBoxController">
    <children>
        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="190.0"
              style="-fx-background-color: d5d5d5;">
            <children>
                <Label text="How may we assist you?"/>
                <JFXButton fx:id="btnClose" style="-fx-background-color: ff0000; -fx-background-radius: 4;" text="X">
                    <HBox.margin>
                        <Insets bottom="3.0" right="3.0" top="3.0"/>
                    </HBox.margin>
                </JFXButton>
            </children>
        </HBox>
        <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="9999.0"
                    prefWidth="336.0" style="-fx-background-color: transparent;">
            <content>
                <VBox fx:id="messageHolder" maxWidth="-Infinity" minHeight="320.0" minWidth="-Infinity"
                      prefWidth="318.0" spacing="5.0"/>
            </content>
            <VBox.margin>
                <Insets bottom="7.0" left="7.0" right="2.0" top="7.0"/>
            </VBox.margin>
            <stylesheets>
                <URL value="@../../css/treeView.css"/>
                <URL value="@../../css/scrollPane.css"/>
            </stylesheets>
        </ScrollPane>
        <VBox>
            <children>
                <JFXTextField fx:id="input" focusColor="#405aa800" onKeyReleased="#handleSendMessage"
                              promptText="Type a message..."
                              style="-fx-background-color: e5e5e5; -fx-background-radius: 7;" unFocusColor="#4d4d4d00">
                    <VBox.margin>
                        <Insets bottom="5.0"/>
                    </VBox.margin>
                </JFXTextField>
            </children>
            <padding>
                <Insets left="10.0" right="10.0"/>
            </padding>
        </VBox>
    </children>
</VBox>
